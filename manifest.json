{
	"manifest_version": 3,
	"name": "Showdown VGC Team Sheet Extension",
	"version": "0.2.1",
	"description": "An extension to export team to a VGC sheet on Pok√©mon Showdown.",
	"icons": {
		"128": "128.png"
	},
	"action": {
		"default_popup": "dist/popup.html"
	},
	"content_scripts": [
		{
			"matches": ["https://play.pokemonshowdown.com/*"],
			"js": ["dist/content.js"],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["dist/injected.js", "dist/base.pdf"],
			"matches": ["https://play.pokemonshowdown.com/*"]
		}
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "@showdown-vgc-team-sheet-extension",
			"strict_min_version": "58.0"
		}
	}
}
