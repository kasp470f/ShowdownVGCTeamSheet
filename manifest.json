{
  "manifest_version": 3,
  "name": "Showdown VGC Team Sheet Extension",
  "version": "0.1.0",
  "description": "An extension to export team to a VGC sheet on Pok√©mon Showdown.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://play.pokemonshowdown.com/*"
      ],
      "js": [
        "dist/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/injected.js"
      ],
      "matches": [
        "https://play.pokemonshowdown.com/*"
      ]
    }
  ]
}